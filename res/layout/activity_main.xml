<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/camera_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_camera" />

    <com.example.view.SFImageView
        android:id="@+id/content_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/show_menu_btn"
        android:layout_below="@+id/camera_btn"
        android:src="@drawable/ftroll_2" />
    
    <LinearLayout
        android:id="@+id/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:visibility="invisible" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

       <TextView
                android:id="@+id/btn_random"
                android:layout_width="0dp"
                android:layout_height="@dimen/menu_item_height"
                android:layout_weight="1"
                android:background="@drawable/random_icon" />

            <TextView
                android:id="@+id/troll_face_1"
                android:layout_width="0dp"
                android:layout_height="@dimen/menu_item_height"
                android:layout_weight="1"
                android:background="@drawable/ftroll_1" />

            <TextView
                android:id="@+id/troll_face_2"
                android:layout_width="0dp"
                android:layout_height="@dimen/menu_item_height"
                android:layout_weight="1"
                android:background="@drawable/ftroll_2" />

            <TextView
                android:id="@+id/troll_face_3"
                android:layout_width="0dp"
                android:layout_height="@dimen/menu_item_height"
                android:layout_weight="1"
                android:background="@drawable/ftroll_3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/troll_face_4"
                android:layout_width="0dp"
                android:layout_height="@dimen/menu_item_height"
                android:layout_weight="1"
                android:background="@drawable/ftroll_4" />

            <TextView
                android:id="@+id/troll_face_5"
                android:layout_width="0dp"
                android:layout_height="@dimen/menu_item_height"
                android:layout_weight="1"
                android:background="@drawable/ftroll_5" />

            <TextView
                android:id="@+id/troll_face_6"
                android:layout_width="0dp"
                android:layout_height="@dimen/menu_item_height"
                android:layout_weight="1"
                android:background="@drawable/ftroll_6" />

            <TextView
                android:id="@+id/troll_face_7"
                android:layout_width="0dp"
                android:layout_height="@dimen/menu_item_height"
                android:layout_weight="1"
                android:background="@drawable/ftroll_7" />
        </LinearLayout>
    </LinearLayout>
    
    <RelativeLayout
        android:id="@+id/show_menu_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_up" />
    </RelativeLayout>

</RelativeLayout>